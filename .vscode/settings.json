{
  "editor.formatOnSave": false, // disable standalone Prettier formatting
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit" // run eslint --fix on save
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.useFlatConfig": true // <-- needed for ESLint v9 + flat config
}
